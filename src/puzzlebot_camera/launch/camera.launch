    <node pkg="aruco_ros" type="marker_publisher" name="wall_marker_publisher">
        <remap from="/camera_info" to="camera/camera_info" />
        <remap from="/image" to="camera/image_color" />
        <param name="image_is_rectified" value="False"/>
        <param name="marker_size"        value="0.17"/>
        <param name="reference_frame"    value="$(arg ref_frame)"/>   <!-- frame in which the marker pose will be refered -->
        <param name="camera_frame"       value="$(arg cam_frame)"/>
        <param name="marker_frame"       value="$(arg marker_frame)"/>
        <param name="detection_mode"     value="DM_VIDEO_FAST" />
        <param name="advertise_name"     value="/puzzlebot/wall" /> <!-- /markers and /markers_list  -->
        <param name="set_y_perpendicular" value="False" />
        <param name="dictionary"         value="DICT_4X4_50"/>
        <param name="marker_id_list" type="yaml" value="[10, 11, 12, 20]" />
    </node>
