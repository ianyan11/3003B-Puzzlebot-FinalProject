<launch>
    <arg name="cubeSize"      value=".05"/>    <!-- in m -->
    <arg name="marker_frame"    value="marker_frame"/>  <!-- leave empty and the pose will be published wrt param parent_name -->
    <arg name="cam_frame"       value="puzzlebot/camera"/>  <!-- leave empty and the pose will be published wrt param parent_name -->
    <arg name="ref_frame"       value="puzzlebot/camera"/>  <!-- leave empty and the pose will be published wrt param parent_name -->

